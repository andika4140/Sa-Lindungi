<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".UI.scanAnimal.ResultActivity">

    <ImageView
        android:id="@+id/previewImageView2"
        android:layout_width="260dp"
        android:layout_height="285dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/komodo"
        app:layout_constraintVertical_bias="0.145"
        app:srcCompat="@drawable/komodo_image_example" />

    <TextView
        android:id="@+id/kenali_satw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|top"
        android:text="@string/kenali_satw"
        android:textAppearance="@style/kenali_satwa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/komodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:gravity="center_horizontal|top"
        android:text="@string/nama_satwa"
        android:textAppearance="@style/nama_satwa"
        app:layout_constraintEnd_toEndOf="@+id/kenali_satw"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/kenali_satw"
        app:layout_constraintTop_toBottomOf="@+id/kenali_satw" />

    <TextView
        android:id="@+id/nama_satwa_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal|top"
        android:text="@string/nama_satwa_description"
        android:textAppearance="@style/nama_satwa_description"
        app:layout_constraintEnd_toEndOf="@+id/previewImageView2"
        app:layout_constraintStart_toStartOf="@+id/previewImageView2"
        app:layout_constraintTop_toBottomOf="@+id/previewImageView2" />

    <Button
        android:id="@+id/button_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/main_color"
        android:text="@string/home"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>